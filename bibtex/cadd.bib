isbn = {2156623929},
issn = {15205142},
journal = {J. Chem. Info. Model.},
number = {12},
pages = {3384--3398},
pmid = {24245913},
title = {{Inclusion of multiple fragment types in the site identification by ligand competitive saturation (SILCS) approach}},
