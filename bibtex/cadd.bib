@article{Shang2014,
abstract = {The discovery of multitarget drugs has recently attracted much attention. Most of the reported multitarget ligands have been serendipitous discoveries. Although a few methods have been developed for rational multitarget drug discovery, there is a lack of elegant methods for de novo multitarget drug design and optimization, especially for multiple targets with large differences in their binding sites. In this paper, we report the first de novo multitarget ligand design method, with an iterative fragment-growing strategy. Using this method, dual-target inhibitors for COX-2 and LTA4H were designed, with the most potent one inhibiting PGE2 and LTB4 production in the human whole blood assay with IC50 values of 7.0 and 7.1 $\mu$M, respectively. Our strategy is generally applicable in rational and efficient multitarget drug design, especially for the design of highly integrated inhibitors for proteins with dissimilar binding pockets.},
author = {Shang, Erchang and Yuan, Yaxia and Chen, Xinyi and Liu, Ying and Pei, Jianfeng and Lai, Luhua},
doi = {10.1021/ci500021v},
file = {:Users/yihan/Desktop/GitHub/literature/drug{\_}discovery/Lai{\_}Fragment{\_}Growing{\_}14.pdf:pdf},
issn = {15205142},
journal = {J. Chem. Info. Model.},
number = {4},
pages = {1235--1241},
pmid = {24611712},
title = {{De novo design of multitarget ligands with an iterative fragment-growing strategy}},
volume = {54},
year = {2014}
}

