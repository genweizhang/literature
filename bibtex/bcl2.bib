file = {:Users/yihan/Desktop/GitHub/literature/biology/Bcl-2/Elmore{\_}ABT263{\_}08.pdf:pdf},
isbn = {1538-7445 (Electronic)$\backslash$r0008-5472 (Linking)},
issn = {00085472},
journal = {Cancer Res.},
